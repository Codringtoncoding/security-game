{% extends "_base.njk" %}

{% block content %}
    <h1>Register</h1>
    <form method="post" action="/auth/register">
        <label>Name
            <input type="text" name="name" required/>
        </label>
        
        <label>Email
            <input type="email" name="email" required/>
        </label>

        <label>Password
            <input type="password" name="password" required/>
        </label>
        
        <button type="submit">Register</button>
    </form>
{% endblock %}