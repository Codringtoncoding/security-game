{% extends "_base.njk" %}

{% block content %}
    <h1>{{ member.name }}</h1>
    
    <h2>Details</h2>
    <div>Email: {{ member.email }}</div>
    <div>Profile Image: <img src="{{ member.image_url }}"/></div>
    <div>Bio: {{ member.bio }}</div>
    <div>Coins: {{ member.coins }}</div>
    <div>Diamonds: {{ member.diamonds }}</div>
    
    <h2>Add Money</h2>
    <form method="post" action="/admin/members/{{ member.id }}/add-coins">
        <label>Add Coins
            <input type="number" name="coins" required>
        </label>
        <button type="submit">Submit</button>
    </form>
    <form method="post" action="/admin/members/{{ member.id }}/add-diamonds">
        <label>Add Diamonds
            <input type="number" name="diamonds" required>
        </label>
        <button type="submit">Submit</button>
    </form>
{% endblock %}